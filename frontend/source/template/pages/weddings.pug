									+svg-use('bird')

							.accordion__content.js-accordion-content
								.accordion
									each accordionSubitem in accordionItem.subitems
										.accordion__subitem.js-accordion-subitem(class=`${accordionSubitem.isActive ? 'is-active' : ''}`)
											.accordion__subtitle.js-accordion-init!= accordionSubitem.subtitle
											.accordion__content.js-accordion-content
												ul.questions-list
													each textContent in accordionSubitem.list
														li.questions-list__item.text!= textContent
											.accordion__btn.accordion__toggler
												+svg-use('bird')

						.accordion__hr

					.accordion__hr

		article.space-article
			.container
				h2.title.space-title Вы фотограф?
				.image-block
					.image-block__img
						img(src="img/wedding-image-block.jpg")
					.image-block__content
