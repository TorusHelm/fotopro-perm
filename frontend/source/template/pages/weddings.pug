extends ../_template
block variables
	- var title = 'Свадебные альбомы'

block content

	main
		include ../modules/card-step/card-step
		include ../modules/card/card
		include ../modules/form-mini/form-mini

		article.container
			.row
				.col
					.main-slider__wrapper
						.swiper-container.main-slider.js-main-swiper-container
							.swiper-wrapper
								-
									let length = 0;

								while length < 6
									.swiper-slide.main-slider__slide(data-slider=length++)
										if ( length == 1 )
											picture.main-slider__slide-bg
												img(src="http://fotopro-perm.ru/storage/images/banners/2788815980096831.jpg", alt="")
